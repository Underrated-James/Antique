# Production Environment Configuration for Vinque E-commerce
# Copy this file to your server and update the values accordingly

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_password_here
DB_NAME=e-web
DB_PORT=3306

# Server Configuration
PORT=3000
NODE_ENV=production

# Frontend URL (update with your domain)
FRONTEND_URL=http://your-domain.com
CORS_ORIGIN=http://your-domain.com

# JWT Secret (generate a secure random string)
JWT_SECRET=your_jwt_secret_key_here_make_it_very_long_and_random

# Email Configuration (if using email features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway Configuration (if applicable)
PAYMENT_GATEWAY_KEY=your_payment_gateway_key
PAYMENT_GATEWAY_SECRET=your_payment_gateway_secret

# File Upload Configuration
UPLOAD_DIR=/var/www/vinque/uploads
MAX_FILE_SIZE=5242880

# Security Configuration
SESSION_SECRET=your_session_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/var/log/vinque/app.log

# Redis Configuration (if using caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SSL Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/your-domain.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/your-domain.com/privkey.pem